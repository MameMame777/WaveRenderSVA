{
  "signal": [
    {"name": "clk", "wave": "p.....|..."},
    {"name": "reset_n", "wave": "0.1...|..."},
    {"name": "valid", "wave": "0.1.0.|1.0"},
    {"name": "ready", "wave": "1.....|.0."},
    {"name": "data", "wave": "x.345x|=.x", "data": ["A", "B", "C", "D"]}
  ],
  "extended_config": {
    "module_name": "manual_test_module",
    "signals": {
      "clk": {"type": "clock", "width": 1},
      "reset_n": {"type": "reset", "width": 1, "active_low": true},
      "valid": {"type": "control", "width": 1, "role": "request"},
      "ready": {"type": "control", "width": 1, "role": "acknowledge"},
      "data": {"type": "data", "width": 8, "role": "payload"}
    },
    "protocols": {
      "handshake": {
        "type": "request_acknowledge",
        "request_signal": "valid",
        "acknowledge_signal": "ready",
        "data_signals": ["data"]
      }
    },
    "timing_relationships": [
      {
        "type": "setup_hold",
        "data_signal": "data",
        "clock_signal": "clk",
        "setup_cycles": 1,
        "hold_cycles": 1
      }
    ],
    "custom_properties": [
      {
        "name": "data_stability",
        "description": "Data must be stable when valid is high",
        "assertion": "valid && $stable(data)"
      }
    ]
  }
}
