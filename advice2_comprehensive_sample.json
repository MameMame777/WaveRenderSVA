{
  "signal": [
    {"name": "clk", "wave": "p.....|..."},
    {"name": "reset", "wave": "1.0...|..."},
    {"name": "req", "wave": "0.1..0|1.0"},
    {"name": "ack", "wave": "0...1.|.0."},
    {"name": "start", "wave": "0.1.0.|..."},
    {"name": "data_valid", "wave": "0....1|.0."},
    {"name": "done", "wave": "0.....|1.0"},
    {"name": "fifo_full", "wave": "0....1|..."},
    {"name": "write_enable", "wave": "0.1.0.|..."},
    {"name": "clk_enable", "wave": "0.1..0|..."},
    {"name": "clk_out", "wave": "0..p..|..."},
    {"name": "issue", "wave": "0.1.0.|..."},
    {"name": "commit", "wave": "0....1|..."},
    {"name": "ready", "wave": "1.0...|..."},
    {"name": "busy", "wave": "0.1.0.|..."}
  ],
  "extended_config": {
    "module_name": "advice2_comprehensive_test",
    "signals": {
      "clk": {"type": "clock", "width": 1},
      "reset": {"type": "reset", "width": 1, "active_high": true},
      "req": {"type": "control", "width": 1, "role": "request"},
      "ack": {"type": "control", "width": 1, "role": "acknowledge"},
      "start": {"type": "control", "width": 1, "role": "trigger"},
      "data_valid": {"type": "control", "width": 1, "role": "status"},
      "done": {"type": "control", "width": 1, "role": "completion"},
      "fifo_full": {"type": "control", "width": 1, "role": "status"},
      "write_enable": {"type": "control", "width": 1, "role": "enable"},
      "clk_enable": {"type": "control", "width": 1, "role": "enable"},
      "clk_out": {"type": "clock", "width": 1, "role": "output"},
      "issue": {"type": "control", "width": 1, "role": "command"},
      "commit": {"type": "control", "width": 1, "role": "completion"},
      "ready": {"type": "control", "width": 1, "role": "status"},
      "busy": {"type": "control", "width": 1, "role": "status"}
    },
    "timing_relationships": [
      {
        "type": "variable_latency",
        "trigger_signal": "req",
        "response_signal": "ack",
        "min_cycles": 1,
        "max_cycles": 3,
        "description": "REQ -> ACK within 1-3 cycles (ADVICE2 #1)"
      },
      {
        "type": "fixed_latency",
        "trigger_signal": "issue",
        "response_signal": "commit",
        "latency_cycles": 4,
        "description": "ISSUE -> COMMIT exactly 4 cycles (ADVICE2 #6)"
      }
    ],
    "sequence_chains": [
      {
        "name": "protocol_sequence",
        "signals": ["start", "data_valid", "done"],
        "delays": ["[1:5]", "[1:5]"],
        "description": "start -> data_valid -> done sequence (ADVICE2 #4)"
      }
    ],
    "conflict_signals": [
      {
        "signal1": "fifo_full",
        "signal2": "write_enable",
        "description": "FIFO overflow prevention (ADVICE2 #3)"
      }
    ],
    "reset_behavior": {
      "reset_signal": "reset",
      "reset_targets": [
        {"signal": "ready", "value": "0"},
        {"signal": "busy", "value": "0"}
      ],
      "description": "Reset clears ready and busy (ADVICE2 #2)"
    },
    "edge_detection": [
      {
        "trigger": "clk_enable",
        "target": "clk_out",
        "type": "change",
        "description": "clk_out toggles when clk_enable=1 (ADVICE2 #5)"
      }
    ]
  }
}
