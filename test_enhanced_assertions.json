{
  "signal": [
    {"name": "clk", "wave": "p......"},
    {"name": "fifo_full", "wave": "0..1.0."},
    {"name": "write_enable", "wave": "0.1...0"},
    {"name": "fifo_empty", "wave": "1.0..1."},
    {"name": "read_enable", "wave": "0..1..0"},
    {"name": "busy", "wave": "0.1..0."},
    {"name": "start_enable", "wave": "0.1...."},
    {"name": "trigger_out", "wave": "0..1..."},
    {"name": "issue", "wave": "0.1...."},
    {"name": "commit", "wave": "0....1."}
  ],
  "assertion_config": {
    "clock_signal": "clk",
    "reset_signal": "rst_n",
    "module_name": "enhanced_assertions",
    "timeout_cycles": 8,
    "assertion_strength": {
      "prohibition_patterns": "assert",
      "signal_changes": "assert",
      "fixed_latency": "assert"
    },
    "prohibition_patterns": [
      {
        "type": "fifo_overflow",
        "signals": ["fifo_full", "write_enable"],
        "description": "Prevent writing when FIFO is full"
      },
      {
        "type": "fifo_underflow", 
        "signals": ["fifo_empty", "read_enable"],
        "description": "Prevent reading when FIFO is empty"
      },
      {
        "type": "busy_conflict",
        "signals": ["busy", "start_enable"],
        "description": "Prevent starting operation when busy"
      }
    ],
    "fixed_latency": [
      {
        "trigger": "issue",
        "response": "commit",
        "cycles": 4,
        "description": "Pipeline commit latency"
      }
    ],
    "signal_change_rules": [
      {
        "enable": "start_enable",
        "target": "trigger_out",
        "description": "Output should change when enabled"
      }
    ],
    "generation_options": {
      "include_error_messages": true,
      "verbose_comments": true,
      "optimize_for_synthesis": false
    }
  }
}
