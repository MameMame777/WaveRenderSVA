{
  "signal": [
    { 
      "name": "clk",         
      "wave": "p.....|...",
      "type": "clock",
      "period": 1
    },
    { 
      "name": "Data",        
      "wave": "x.345x|=.x", 
      "data": ["head", "body", "tail", "data"],
      "type": "data",
      "width": 8
    },
    { 
      "name": "Request",     
      "wave": "0.1..0|1.0",
      "type": "control",
      "protocol": "req_ack",
      "ack_signal": "Acknowledge"
    },
    {},
    { 
      "name": "Acknowledge", 
      "wave": "1.....|01.",
      "type": "control",
      "protocol": "req_ack",
      "req_signal": "Request"
    },
    { 
      "name": "Valid",       
      "wave": "0..1.0|.1.",
      "type": "control",
      "protocol": "valid_ready",
      "pair_signal": "Ready"
    },
    { 
      "name": "Ready",       
      "wave": "1.....|..0",
      "type": "control",
      "protocol": "valid_ready",
      "pair_signal": "Valid"
    }
  ],
  "config": {
    "assertion_style": "detailed",
    "clock_signal": "clk",
    "timeout_cycles": 10
  }
}
