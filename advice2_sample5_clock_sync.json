{
  "signal": [
    {"name": "clk", "wave": "p.....|..."},
    {"name": "clk_enable", "wave": "0.1..0|..."},
    {"name": "clk_out", "wave": "0..p..|..."}
  ],
  "extended_config": {
    "module_name": "advice2_clock_sync",
    "signals": {
      "clk": {"type": "clock", "width": 1},
      "clk_enable": {"type": "control", "width": 1, "role": "enable"},
      "clk_out": {"type": "clock", "width": 1, "role": "output"}
    },
    "edge_detection": [
      {
        "trigger": "clk_enable",
        "target": "clk_out",
        "type": "change",
        "description": "clk_enable が 1 なら clk_out もトグルする"
      }
    ]
  }
}
