{
  "signal": [
    {"name": "clk", "wave": "p......"},
    {"name": "request", "wave": "0.1...0"},
    {"name": "acknowledge", "wave": "0...1.0"},
    {"name": "data", "wave": "x.=...x", "data": ["A1"]}
  ],
  "assertion_config": {
    "clock_signal": "clk",
    "reset_signal": "rst_n",
    "module_name": "custom_assertions",
    "timeout_cycles": {
      "request_ack": 15,
      "data_stable": 5,
      "default": 10
    },
    "signal_configs": {
      "data": {
        "width": 32,
        "type": "data_bus",
        "stability_required": true,
        "x_check_mode": "active_only"
      },
      "request": {
        "type": "control",
        "edge_sensitive": true,
        "glitch_detection": true
      }
    },
    "protocols": [
      {
        "type": "request_acknowledge",
        "name": "req_ack_protocol",
        "request_signal": "request",
        "acknowledge_signal": "acknowledge",
        "data_signals": ["data"],
        "properties": {
          "max_outstanding": 2,
          "ack_must_follow_req": true,
          "data_stable_during_transaction": true,
          "timeout_cycles": 15
        }
      }
    ],
    "assertion_strength": {
      "data_integrity": "assert",
      "timing_constraints": "assume", 
      "protocol_compliance": "assert",
      "performance_hints": "cover"
    },
    "timing_constraints": {
      "setup_time": "2ns",
      "hold_time": "1ns",
      "clock_period": "10ns"
    },
    "generation_options": {
      "include_coverage": true,
      "generate_assumes": true,
      "hierarchical_naming": true,
      "add_comments": true
    }
  }
}
