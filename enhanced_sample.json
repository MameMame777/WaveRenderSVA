{
  "assertion_config": {
    "clock_signal": "clk",
    "reset_signal": "rst_n",
    "module_name": "enhanced_assertion_module",
    "timeout_cycles": 15,
    "assertion_strength": {
      "handshake_timeout": "weak",
      "data_stability": "strong",
      "protocol_compliance": "strong"
    },
    "generation_options": {
      "enable_detailed_analysis": true,
      "enable_timing_analysis": true,
      "enable_data_width_detection": true,
      "enable_protocol_detection": true,
      "enable_coverage_points": false
    },
    "signal_overrides": {
      "Data": {
        "width": 8,
        "type": "data",
        "analysis_hints": ["track_transitions", "check_stability"]
      },
      "Request": {
        "type": "control",
        "role": "handshake_initiator"
      },
      "Acknowledge": {
        "type": "control", 
        "role": "handshake_response"
      }
    }
  },
  "signal": [
    { "name": "clk",         "wave": "p.....|..." },
    { "name": "Data",        "wave": "x.345x|=.x", "data": ["head", "body", "tail", "data"] },
    { "name": "Request",     "wave": "0.1..0|1.0" },
    {},
    { "name": "Acknowledge", "wave": "1.....|01." },
    { "name": "Valid",       "wave": "0..1.0|.1." },
    { "name": "Ready",       "wave": "1.....|..0" }
  ]
}
